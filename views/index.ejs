<!DOCTYPE html>
<html>
  <head>
    <title>CONTACTOS - CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="DataTables/datatables.min.css" rel="stylesheet"/>
    <script src="DataTables/datatables.min.js"></script>
    <script type="text/javascript">
      function DeleteConfirm() {
        if (confirm("¿Quieres eliminar el registro?"))
          return true;
        else
          return false;
      }
      function CreateConfirm() {
        if (confirm("¿Quieres agregar un nuevo registro?"))
          return true;
        else
          return false;
      }
      function EditConfirm() {
        if (confirm("¿Quieres editar este registro?"))
          return true;
        else
          return false;
      }
    </script>
  </head>
  <body style="background-image: url('https://cdn.pixabay.com/photo/2018/08/14/13/23/ocean-3605547_1280.jpg'); background-repeat: no-repeat; background-size: cover;">
    <div class="container">
      <br>
      <h1 align="left" style="color: rgb(255, 255, 255);">CONTACTOS</h1>
      <br>
      <a href="/create" onclick="return CreateConfirm()" type="button" class="btn btn-info">INGRESAR NUEVO PRODUCTO</a>
      <br>
      <br>
      <br>
      <table class="table table-dark" id="myTable">
        <thead align="center">
          <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>APELLIDOS</th>
            <th>CORREO</th>
            <th>FECHA DE NACIMIENTO</th>
            <th>DNI</th>
            <th>IMAGEN</th>
            <th>ACCIONES</th>
          </tr>
        </thead>
        <tbody align="center">
          <% data.forEach((row) => { %>
            <tr>
              <td class="align-middle"><%= row.id %></td>
              <td class="align-middle"><%= row.nombre %></td>
              <td class="align-middle"><%= row.apellidos%></td>
              <td class="align-middle"><%= row.correo%></td>
              <td class="align-middle"><%= row.fecha_nac%></td>
              <td class="align-middle"><%= row.dni%></td>
              <td class="align-middle">
              <img src="https://lab09-bs.s3-sa-east-1.amazonaws.com/<%= row.imagen %>" alt="" height="80" style="border-radius: 10px;">
            </td>
              <td class="align-middle">
                <div class="d-grid gap-2 d-md-block">
                  <a href="/edit/<%= row.id %>" onclick="return EditConfirm()" type="button" class="btn btn-success me-1">EDITAR</a>
                  <a href="/delete/<%= row.id %>" onclick="return DeleteConfirm()" class="btn btn-danger" type="button">ELIMINAR</a>
                </div>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <script>
      $(document).ready( function () {
        $('#myTable').DataTable();
      } );
      </script>